{% extends '::base.html.twig' %}
{% block title %}Create Brand{% endblock %}
{% block page_title %}Create Brand{% endblock %}

{% block body -%}

    <div id = "avatar-label" class="mdl-label-mimic">Profile Image <div style="display:none;" id="dropzone-form-close"> <i class="fa fa-times-circle"></i></div></div>
    {{ render(controller('MediaBundle:Media:createDropzoneForm', {'context':'brand'})) }}
    {{ form_start(form) }}


    <div id="user_media" class="is-dirty mdl-textfield--floating-label">
        {% if entity.media %}
            <div class="media-placeholder-image">
                <div id="overlay">
                    <i class="fa fa-pencil-square-o fa-2x"></i>
                </div>
            </div>
        {%  else %}
            <i class="media-placeholder-image fa fa-picture-o fa-5x"></i>
        {% endif %}
    </div>
    {{ form_widget(form) }}
    {{ form_end(form) }}
        <ul class="record_actions">
    <li>
        <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" href="{{ path('_manage_brand') }}">
            <i class="fa fa-arrow-circle-left"></i> Back to the list
        </a>
    </li>
</ul>
{% endblock %}
