{% extends '::base.html.twig' %}
{% block title %}Brand {{ entity.name }}{% endblock %}

{% block body -%}
    <h1>Brand</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Division</th>
                <td>{{ entity.division }}</td>
            </tr>
            <tr>
                <th>Primarycolor</th>
                <td>{{ entity.primaryColor }}</td>
            </tr>
            <tr>
                <th>Buttoncolor</th>
                <td>{{ entity.buttonColor }}</td>
            </tr>
            <tr>
                <th>Hovercolor</th>
                <td>{{ entity.hoverColor }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('_manage_brand') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('_manage_brand_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
