{% extends '::base.html.twig' %}
{% block title %}Brand {{ entity.name }}{% endblock %}
{% block page_title %}Brand {{ entity.name }}{% endblock %}

{% block body -%}

    <table class="mdl-data-table mdl-js-data-table show-table">
        <tbody>
            <tr>
                <td class="mdl-data-table__cell--non-numeric th-mimic">Name (ID)</td>
                <td class="mdl-data-table__cell--non-numeric">{{ entity.name }} ({{ entity.id }})</td>
            </tr>
            <tr>
                <td class="mdl-data-table__cell--non-numeric th-mimic">Division</td>
                <td class="mdl-data-table__cell--non-numeric">{{ entity.division }}</td>
            </tr>
            <tr>
                <td class="mdl-data-table__cell--non-numeric th-mimic">Primary color</td>
                <td style="background-color: {{ entity.primaryColor }}"></td>
            </tr>
            <tr>
                <td class="mdl-data-table__cell--non-numeric th-mimic">Secondary color</td>
                <td style="background-color: {{ entity.secondaryColor }}"></td>
            </tr>
            {# <tr>
                <td class="mdl-data-table__cell--non-numeric th-mimic">Special color</td>
                <td style="background-color: {{ entity.hoverColor }}"></td>
            </tr> #}
            <tr>
                <td class="mdl-data-table__cell--non-numeric th-mimic">Logo</td>
                <td class="mdl-data-table__cell--non-numeric center logo">
                    {% if entity.media %}
                        <img src="{{ asset( entity.media.getRelativePath ~ "/" ~ entity.media.getHashedFilename ) | imagine_filter('brandLogo') }}">
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" href="{{ path('_manage_brand') }}"><i class="fa fa-arrow-circle-left"></i> Back to the list</a>
        </li>
        <li>
            <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" href="{{ path('_manage_brand_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil-square-o"></i> Edit</a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>

{% endblock %}
