{% extends '::base.html.twig' %}
{% block title %}Manage Brand{% endblock %}

{% block body -%}

    <h1>Brand list</h1>

    <table class="mdl-data-table mdl-js-data-table">
        <thead>
            <tr>
                <th class="mdl-data-table__cell--non-numeric">Name (ID)</th>
                <th class="mdl-data-table__cell--non-numeric">Division</th>
                <th class="mdl-data-table__cell--non-numeric">Primary color</th>
                <th class="mdl-data-table__cell--non-numeric">Secondary color</th>
                <th class="mdl-data-table__cell--non-numeric">Special color</th>
                <th class="mdl-data-table__cell--non-numeric center">Logo</th>
                <th class="mdl-data-table__cell--non-numeric">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td class="mdl-data-table__cell--non-numeric">
                    <a href="{{ path('_manage_brand_show', { 'id': entity.id }) }}">{{ entity.name }}</a> ({{ entity.id }})
                </td>
                <td class="mdl-data-table__cell--non-numeric">{{ entity.division }}</td>
                <td class="mdl-data-table__cell--non-numeric" style="background-color: {{ entity.primaryColor }}"></td>
                <td class="mdl-data-table__cell--non-numeric" style="background-color: {{ entity.buttonColor }}"></td>
                <td class="mdl-data-table__cell--non-numeric" style="background-color: {{ entity.hoverColor }}"></td>
                <td class="mdl-data-table__cell--non-numeric center">
                    {% if entity.media %}
                        {% media entity.media, 'small' %}
                    {% endif %}
                </td>
                <td class="mdl-data-table__cell--non-numeric">
                    <ul class="table-actions">
                        <li>
                            <a href="{{ path('_manage_brand_show', { 'id': entity.id }) }}">Show</a>
                        </li>
                        <li>
                            <a href="{{ path('_manage_brand_edit', { 'id': entity.id }) }}">Edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" href="{{ path('_manage_brand_new') }}">Create a new entry</a>
        </li>
    </ul>

{% endblock %}
