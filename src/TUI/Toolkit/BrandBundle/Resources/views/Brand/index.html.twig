{% extends '::base.html.twig' %}
{% block title %}Manage Brands{% endblock %}
{% block page_title %}Manage Brands{% endblock %}

{% block body -%}

    <ul class="record_actions">
        <li>
            <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" href="{{ path('_manage_brand_new') }}"><i class="fa fa-plus-circle"></i> Create a new Brand</a>
        </li>
    </ul>

    <table class="mdl-data-table mdl-js-data-table">
        <thead>
            <tr>
                <th class="mdl-data-table__cell--non-numeric">Name (ID)</th>
                <th class="mdl-data-table__cell--non-numeric">Division</th>
                <th class="mdl-data-table__cell--non-numeric center">Primary color</th>
                <th class="mdl-data-table__cell--non-numeric center">Secondary color</th>
                <th class="mdl-data-table__cell--non-numeric center">Tertiary color</th>
                <th class="mdl-data-table__cell--non-numeric center">Logo</th>
                <th class="mdl-data-table__cell--non-numeric cell-actions">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td class="mdl-data-table__cell--non-numeric" data-th="Name (ID)">
                    <a href="{{ path('_manage_brand_show', { 'id': entity.id }) }}">{{ entity.name }}</a> ({{ entity.id }})
                </td>
                <td class="mdl-data-table__cell--non-numeric" data-th="Division">{{ entity.division }}</td>
                <td class="mdl-data-table__cell--non-numeric center" data-th="Primary Color" style="background-color: {{ entity.primaryColor }}"></td>
                <td class="mdl-data-table__cell--non-numeric center" data-th="Secondary Color"style="background-color: {{ entity.secondaryColor }}"></td>
                <td class="mdl-data-table__cell--non-numeric center" data-th="Tertiary Color" style="background-color: {{ entity.tertiaryColor }}"></td>
                <td class="mdl-data-table__cell--non-numeric center logo" data-th="Logo">
                    {% if entity.media %}
                        <img src="{{ asset(".." ~ entity.media.getRelativePath ~ "/" ~ entity.media.getHashedFilename ) }}" alt="{{ entity.name }}">
                    {% endif %}
                </td>
                <td class="mdl-data-table__cell--non-numeric cell-actions" data-th="Actions">
                    <ul class="table-actions">
                        <li>
                            <a href="{{ path('_manage_brand_show', { 'id': entity.id }) }}" title="View"><i class="fa fam-view"></i></a>
                        </li>
                        <li>
                            <a href="{{ path('_manage_brand_edit', { 'id': entity.id }) }}" title="Edit"><i class="fa fam-edit"></i></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
