{% extends '::base.html.twig' %}
{% block title %}Manage Brand{% endblock %}

{% block body -%}
    <h1>Brand list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Name (ID)</th>
                <th>Division</th>
                <th>Primarycolor</th>
                <th>Buttoncolor</th>
                <th>Hovercolor</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('_manage_brand_show', { 'id': entity.id }) }}">{{ entity.name }}</a> ({{ entity.id }})</td>
                <td>{{ entity.division }}</td>
                <td style="background-color: {{ entity.primaryColor }}"></td>
                <td style="background-color: {{ entity.buttonColor }}"></td>
                <td style="background-color: {{ entity.hoverColor }}"></td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('_manage_brand_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('_manage_brand_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('_manage_brand_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
