{% extends '::base.html.twig' %}

{% block body -%}
    <h1>PaymentTask list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>String</th>
                <th>Name</th>
                <th>Value</th>
                <th>Duedate</th>
                <th>Paiddate</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('paymenttask_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.string }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.value }}</td>
                <td>{% if entity.dueDate %}{{ entity.dueDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.paidDate %}{{ entity.paidDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.type }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('paymenttask_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('paymenttask_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('paymenttask_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
