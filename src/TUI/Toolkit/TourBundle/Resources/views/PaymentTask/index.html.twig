{% extends '::base.html.twig' %}

{% block body -%}
    <h1>{% trans %}tour.page_title.payment_task.list{% endtrans %}</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>{% trans %}tour.page_title.payment_task.show.id{% endtrans %}</th>
                <th>{% trans %}tour.page_title.payment_task.show.string{% endtrans %}</th>
                <th>{% trans %}tour.page_title.payment_task.show.name{% endtrans %}</th>
                <th>{% trans %}tour.page_title.payment_task.show.value{% endtrans %}</th>
                <th>{% trans %}tour.page_title.payment_task.show.duedate{% endtrans %}</th>
                <th>{% trans %}tour.page_title.payment_task.show.paiddate{% endtrans %}</th>
                <th>{% trans %}tour.page_title.payment_task.show.type{% endtrans %}</th>
                <th>{% trans %}tour.page_title.payment_task.show.actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('paymenttask_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.string }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.value }}</td>
                <td>{% if entity.dueDate %}{{ entity.dueDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.paidDate %}{{ entity.paidDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.type }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('paymenttask_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('paymenttask_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('paymenttask_new') }}">
                {% trans %}tour.actions.create_new_paymentTask{% endtrans %}
            </a>
        </li>
    </ul>
    {% endblock %}
