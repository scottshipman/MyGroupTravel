{% extends '::base.html.twig' %}
{% block title %}{% trans %}boardBasis.title.index{% endtrans %}{% endblock %}
{% block page_title %}{% trans %}boardBasis.page_title.index{% endtrans %}{% endblock %}

{% block body -%}

    <ul class="record_actions">
        <li>
            <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" href="{{ path('_manage_boardbasis_new') }}"><i class="fa fa-plus-circle"></i> {% trans %}boardBasis.actions.create_new{% endtrans %}</a>
        </li>
    </ul>

    <table class="mdl-data-table mdl-js-data-table">
        <thead>
            <tr>
                <th class="mdl-data-table__cell--non-numeric">{% trans %}boardBasis.table.label.name{% endtrans %}</th>
                <th class="mdl-data-table__cell--non-numeric cell-actions">{% trans %}boardBasis.table.label.action{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td class="mdl-data-table__cell--non-numeric" data-th="{% trans %}boardBasis.table.label.name{% endtrans %}"><a href="{{ path('_manage_boardbasis_show', { 'id': entity.id }) }}">{{ entity.name }}</a> ({{ entity.id }})</td>
                <td class="mdl-data-table__cell--non-numeric cell-actions" data-th="{% trans %}boardBasis.table.label.action{% endtrans %}">
                    <ul class="table-actions">
                        <li>
                            <a href="{{ path('_manage_boardbasis_show', { 'id': entity.id }) }}" title="{% trans %}boardBasis/table.actions.view{% endtrans %}"><i class="fa fam-view"></i></a>
                        </li>
                        <li>
                            <a href="{{ path('_manage_boardbasis_edit', { 'id': entity.id }) }}" title="{% trans %}boardBasis/table.actions.edit{% endtrans %}"><i class="fa fam-edit"></i></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
