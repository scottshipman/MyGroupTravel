{% extends '::base.html.twig' %}
{% block title %}Trip Status '{{ entity.name }}'{% endblock %}
{% block page_title %}Trip Status '{{ entity.name }}'{% endblock %}

{% block body -%}

    <table class="mdl-data-table mdl-js-data-table">
        <tbody>
            <tr>
                <td class="mdl-data-table__cell--non-numeric th-mimic">Name (ID)</td>
                <td class="mdl-data-table__cell--non-numeric">{{ entity.name }} ({{ entity.id }})</td>
            </tr>
            <tr>
                <td class="mdl-data-table__cell--non-numeric th-mimic">Visible</td>
                <td class="mdl-data-table__cell--non-numeric">{{ entity.visible }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" href="{{ path('manage_tripstatus') }}">
            <i class="fa fa-arrow-circle-left"></i> Back to the list
        </a>
    </li>
    <li>
        <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" href="{{ path('manage_tripstatus_edit', { 'id': entity.id }) }}">
            <i class="fa fa-pencil-square-o"></i> Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
