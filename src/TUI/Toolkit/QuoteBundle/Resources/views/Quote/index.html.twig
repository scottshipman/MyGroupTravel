{% extends '::base.html.twig' %}

{% block title %}Manage Quotes{% endblock %}
{% block body %}

    <h1>Quote Dashboard</h1>

    <ul>
        <li>
            <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" href="{{ path('manage_quote_new') }}">
                Create a new Quote
            </a>
        </li>
    </ul>

    {% embed "QuoteBundle:Quote:quote_tabs.html.twig" %}
        {% block active_tab %}
            <a class="mdl-tabs__tab is-active" href="{{ path('manage_quote') }}">Active Quotes</a>
        {% endblock %}
    {% endembed %}
    {{ grid_search(grid) }}
    {{ grid(grid, 'QuoteBundle:Quote:grid.html.twig') }}

{% endblock %}
