{% extends '::base.html.twig' %}
{% block title %}Quote {{ entity.name }}{% endblock %}
{% block body -%}
    <h1>Quote</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ entity.reference }}</td>
            </tr>
            <tr>
                <th>Organizer</th>
                <td>{{ entity.organizer }}</td>
            </tr>
            <tr>
                <th>Converted</th>
                <td>{{ entity.converted }}</td>
            </tr>
            <tr>
                <th>Deleted</th>
                <td>{{ entity.deleted }}</td>
            </tr>
            <tr>
                <th>Setupcomplete</th>
                <td>{{ entity.setupComplete }}</td>
            </tr>
            <tr>
                <th>Locked</th>
                <td>{{ entity.locked }}</td>
            </tr>
            <tr>
                <th>Salesagent</th>
                <td>{{ entity.salesAgent }}</td>
            </tr>
            <tr>
                <th>Istemplate</th>
                <td>{{ entity.isTemplate }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('manage_quote') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('manage_quote_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
