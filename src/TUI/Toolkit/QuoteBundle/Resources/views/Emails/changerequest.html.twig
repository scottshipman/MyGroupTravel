{% block body_html %}
    {% autoescape false %}
    <div style="color:#fff; font-size: 1px; text-align: center;">Ensure receiving emails from {{ brand.name }}, please
        add us to
        your contact list.
    </div>
    <div style="height: 150px; background-color:{{ brand.primaryColor }}; color:{{ brand.primaryColor }}; width: 100%;"></div>
    <div class="outer" style="background:#E5E8EA; margin-top: -20px; "></br>
        <table width="100%" table-align="center" border="0" cellspacing="0" cellpadding="0">
            <tr>
                <td style="text-align: center;">
                    <center>
                        <div class="inner"
                             style="width:80%; margin: 0 auto; background-color: #fff; text-align: center; padding-bottom: 25px; margin-top: -90px;">
                            <center>
                                <div class="content"
                                     style="position: relative; width: 80%; margin: 0 auto; text-align: center; padding-top: 30px; ">
                                    <center>
                                        {% if brand.media %}
                                            <img style="margin: 0 auto; position: relative; display: block; max-width: 250px;"
                                                 src="{{ absolute_url(asset(".." ~ brand.media.getRelativePath ~ "/" ~ brand.media.getHashedFilename )) }}"
                                                 alt="{{ brand.name }}">
                                        {% else %}
                                            <p style="text-align: center; text-transform: uppercase; color: #283F5F;">{{ brand.name }}</p>
                                        {% endif %}
                                    </center>
                                    <h2 style="text-align: center; font-weight: 100; color: #283F5F;">{% trans %}quote.email.change_request.intro{% endtrans %}</h2></br>
                                    <p>{% trans %}quote.email.change_request.institution_name{% endtrans %} {{ entity.quoteReference.institution }}</p></br>
                                    <p>{% trans %}quote.email.change_request.tour_name{% endtrans %} {{ entity.name }}</p></br>
                                    <p>{% trans %}quote.email.change_request.quote_number{% endtrans %} {{ entity.quoteNumber }}</p></br>
                                    <p>{% trans %}quote.email.change_request.organizer{% endtrans %} {{ entity.quoteReference.organizer.firstName }} {{ entity.quoteReference.organizer.lastName }} {{ entity.quoteReference.organizer.email }}</p></br>
                                    <h4 style="text-align: center; color: #717D82;">{% trans %}quote.email.change_request.changes{% endtrans %}</h4></br>
                                    {% for change in changes %}
                                        <p style="text-align: center;">{{ change }}</p></br>
                                    {% endfor %}
                                    <p style="text-align: center">{{ additional }}</p></br>
                                    <center>
                                        <a style="text-decoration: none; color:#fff; display: block; width: 40%; text-align: center; padding: 20px; margin: 20px auto; background-color:{{ brand.primaryColor }};"
                                           href="{{ absolute_url("/manage/quote/" ~ entity.id ~ "/edit") }}">{% trans %}quote.email.change_request.cta{% endtrans %}</a></br>
                                    </center>
                                    <hr>
                                    <p style="text-align: center; color: #C7C3C5;">
                                        {% trans %}quote.email.change_request.link_text{% endtrans %}
                                    </p></br>
                                    <a style="text-decoration: none; display: block; width: auto; margin: 0 auto; text-align: center; color:{{ brand.primaryColor }};"
                                       href="{{ absolute_url("/manage/quote/" ~ entity.id ~ "/edit") }}">{{ absolute_url("/manage/quote/" ~ entity.id ~ "/edit") }}</a></br>
                                </div>
                            </center>
                        </div>
                        <footer style="background-color:#E5E8EA; padding-bottom: 25px; padding-top: 25px">
                            <div class="footer-middle" style="width: 60%; margin: 0 auto; position: relative;">
                                <p style="text-align: center; color:#9DA6AA;">Copyright
                                    Â© {{ "now"|date("Y") }}  {{ brand.name }}, All rights reserved</p>
                            </div>
                        </footer>
                    </center>
                </td>
            </tr>
        </table>
    </div>
    {% endautoescape %}
{% endblock %}
