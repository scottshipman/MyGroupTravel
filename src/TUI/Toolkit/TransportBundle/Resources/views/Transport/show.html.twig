{% extends '::base.html.twig' %}
{% block title %}{% trans %}transport.title.show{% endtrans %}'{{ entity.name }}'{% endblock %}
{% block page_title %}{% trans %}transport.page_title.show{% endtrans %} '{{ entity.name }}'{% endblock %}

{% block body -%}

    <table class="mdl-data-table mdl-js-data-table show-table">
        <tbody>
            <tr>
                <td class="mdl-data-table__cell--non-numeric th-mimic">{% trans %}transport.table.label.name{% endtrans %}</td>
                <td class="mdl-data-table__cell--non-numeric">{{ entity.name }} ({{ entity.id }})</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" href="{{ path('manage_transport') }}">
            <i class="fa fa-arrow-circle-left"></i> {% trans %}transport.actions.back{% endtrans %}
        </a>
    </li>
    <li>
        <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" href="{{ path('manage_transport_edit', { 'id': entity.id }) }}">
            <i class="fa fa-pencil-square-o"></i> {% trans %}transport.actions.edit{% endtrans %}
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
