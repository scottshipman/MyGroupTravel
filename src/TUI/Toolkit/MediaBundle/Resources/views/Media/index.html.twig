{% extends '::base.html.twig' %}
{% block title %}{% trans %}media.title.index{% endtrans %}{% endblock %}

{% block body -%}

    <h1>{% trans %}media.page_title.index{% endtrans %}</h1>

    <table class="mdl-data-table mdl-js-data-table">
        <thead>
            <tr>
                <th class="mdl-data-table__cell--non-numeric">{% trans %}media.table.label.name{% endtrans %}</th>
                <th class="mdl-data-table__cell--non-numeric">{% trans %}media.table.label.filename{% endtrans %}</th>
                <th class="mdl-data-table__cell--non-numeric">{% trans %}media.table.label.context{% endtrans %}</th>
                <th class="mdl-data-table__cell--non-numeric cell-actions">{% trans %}media.table.label.action{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td class="mdl-data-table__cell--non-numeric">
                    <a href="{{ path('_manage_brand_show', { 'id': entity.id }) }}">{{ entity.filename }}</a> ({{ entity.id }})
                </td>
                <td class="mdl-data-table__cell--non-numeric">{{ entity.filename }}</td>
                <td class="mdl-data-table__cell--non-numeric" style="background-color: {{ entity.context }}"></td>
                <td class="mdl-data-table__cell--non-numeric cell-actions">
                    <ul class="table-actions">
                        <li>
                            <a href="{{ path('_manage_brand_edit', { 'id': entity.id }) }}" title="Edit"><i class="fa fa-pencil-square-o"></i></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" href="{{ path('media_new') }}"><i class="fa fa-upload"></i> {% trans %}media.actions.upload{% endtrans %}</a>
        </li>
    </ul>

{% endblock %}
