{% extends '::base.html.twig' %}
{% block title %}Institution {{ entity.name }}{% endblock %}

{% block body -%}
    <h1>Institution</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Address1</th>
                <td>{{ entity.address1 }}</td>
            </tr>
            <tr>
                <th>Address2</th>
                <td>{{ entity.address2 }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ entity.city }}</td>
            </tr>
            <tr>
                <th>County</th>
                <td>{{ entity.county }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ entity.state }}</td>
            </tr>
            <tr>
                <th>Postcode</th>
                <td>{{ entity.postCode }}</td>
            </tr>
            <tr>
                <th>Localauthority</th>
                <td>{{ entity.localAuthority }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ entity.country }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ entity.code }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Websiteaddress</th>
                <td>{{ entity.websiteAddress }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                {% if entity.media %}
                    <td class="logo">{% media entity.media, 'small' %}</td>
                {% endif %}
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('manage_institution') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('manage_institution_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
