{% extends '::base.html.twig' %}
{% block title %}Institution Dashboard{% endblock %}
{% block page_title %}Institution Dashboard{% endblock %}

{% block body -%}

    <ul class="record_actions">
        <li>
            <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" href="{{ path('manage_institution_new') }}">Create a new Institution</a>
        </li>
    </ul>

    {% embed "InstitutionBundle:institution:institution_tabs.html.twig" %}
        {% if is_granted("ROLE_ADMIN") %}
            {% block institution_tab %}
                <a class="mdl-tabs__tab is-active" href="{{ path('manage_institution') }}">Current Institutions</a>
            {% endblock %}
        {% endif %}
    {% endembed %}

    {{ grid_search(grid) }}

    {{ grid(grid, 'AppBundle:Grid:grid.html.twig') }}

{% endblock %}
