{% extends '::base.html.twig' %}
{% block title %}{% trans %}institution.title.edit{% endtrans %} {{ entity.name }}{% endblock %}
{% block page_title %}{% trans %}institution.page_title.edit{% endtrans %} {{ entity.name }}{% endblock %}

{% block body -%}
    <div id="avatar-label" class="mdl-label-mimic">{% trans %}institution.avatar.label{% endtrans %}
        <div style="display:none;" id="dropzone-form-close"><i class="fa fa-times-circle"></i></div>
    </div>
    {{ render(controller('MediaBundle:Media:createDropzoneForm', {'context':'institution'})) }}
    {{ form_start(edit_form) }}


    <div id="user_media" class="is-dirty mdl-textfield--floating-label">
        {% if entity.media %}
            <div class="media-placeholder-image edit">
                <div id="overlay">
                    <i class="fa fa-pencil-square-o fa-2x"></i>
                </div>
            </div>
            <script>
                $(document).ready(function () {
                    var bUrl = '{{ asset(".." ~ entity.media.getRelativePath ~ "/" ~ entity.media.getHashedFilename ) }}';
                    $(".media-placeholder-image").css({
                        "background-image": "url(" + bUrl + ")",
                        "background-position": "50%",
                        "background-repeat": "no-repeat",
                        "background-size": "contain",
                        "width": "300px",
                        "height": "160px"
                    });
                    $("#tui_toolkit_institutionbundle_institution_media").val('{{ entity.media.id }}');
                });
            </script>
        {% else %}
            <span class="media-placeholder-image new">
                <i class="fa fa-picture-o fa-3x"></i>
                <span>{% trans %}institution.media.label{% endtrans %}</span>
            </span>
        {% endif %}
    </div>
    {{ form_widget(edit_form) }}
    {{ form_end(edit_form) }}

    <ul class="record_actions">
        <li>
            <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored"
               href="{{ path('manage_institution') }}">
                <i class="fa fa-arrow-circle-left"></i> {% trans %}institution.actions.back{% endtrans %}
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>


{% endblock %}
