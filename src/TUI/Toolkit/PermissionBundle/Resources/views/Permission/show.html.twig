{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Permission</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Class</th>
                <td>{{ entity.class }}</td>
            </tr>
            <tr>
                <th>Object</th>
                <td>{{ entity.object }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ entity.user }}</td>
            </tr>
            <tr>
                <th>Grants</th>
                <td>{{ entity.grants }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('permission') }}">
            <i class="fa fa-arrow-circle-left"></i> Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('permission_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
