{% block body -%}
    <div class="passport-form sidebar-form-edit">
        {{ form_start(edit_form) }}

        {{ form_start(edit_form) }}
        <p style="color:red; margin-top: 10px; max-width: 375px;">It is important that the details provided here match exactly as per the passport</p>
        {{ form_row(edit_form.passportLastName) }}
        {{ form_row(edit_form.passportFirstName) }}
        {{ form_widget(edit_form.passportMiddleName) }}
        {{ form_widget(edit_form.passportGender) }}
        {{ form_widget(edit_form.passportTitle) }}
        {{ form_row(edit_form.passportIssuingState) }}
        {{ form_row(edit_form.passportNumber) }}
        {{ form_widget(edit_form.passportNationality) }}
        <label style="display: block; color:rgba(0,0,0,.26);">{% trans %}passenger.labels.passport_dob{% endtrans %}</label>
        {{ form_widget(edit_form.passportDateOfBirth) }}
        <label style="display: block; color:rgba(0,0,0,.26);">{% trans %}passenger.labels.passport_doi{% endtrans %}</label>
        {{ form_widget(edit_form.passportDateOfIssue) }}
        <label style="display: block; color:rgba(0,0,0,.26);">{% trans %}passenger.labels.passport_doe{% endtrans %}</label>
        {{ form_widget(edit_form.passportDateOfExpiry) }}
        {{ form_rest(edit_form) }}
        {{ form_end(edit_form) }}


        {#<ul class="record_actions">#}
        {#<li>{{ form(delete_form) }}</li>#}
        {#</ul>#}
    </div>
    <script>
        $(document).ready(function () {
            var tourId = $('.site-show').attr('entityId');
            var passengerId = $('.site-show').attr('passengerId');
            $('#tui_toolkit_passengerbundle_passport_passengerReference').val(passengerId);
            $('#tui_toolkit_passengerbundle_passport_passportGender').css("width", "300px");
            $('#tui_toolkit_passengerbundle_passport_passportTitle').css("width", "300px");

        });
    </script>
{% endblock %}
