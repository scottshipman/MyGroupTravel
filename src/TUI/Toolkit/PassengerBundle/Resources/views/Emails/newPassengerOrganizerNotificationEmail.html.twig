{% block body_html %}
    {%  if 'en_GB' in locale %} {% set format = 'd M Y' %} {% else %} {% set format = 'M d Y' %} {% endif %}
    {% if payingPlaces != null and waitlist is defined  %}
        {% set remainingSpots  = payingPlaces -waitlist|length %}
        {% if remainingSpots < 1 %}{% set remainingSpots = 0 %}{% endif %}
    {% endif %}

    {% autoescape false %}
        <div style="color:#fff; font-size: 1px; text-align: center;">Ensure receiving emails from {{ brand.name }}, please
            add us to
            your contact list.
        </div>
        <div style="height: 150px; background-color:{{ brand.primaryColor }}; color:{{ brand.primaryColor }}; : width: 100%;"></div>
        <div class="outer" style="background:#E5E8EA; margin-top: -20px; "></br>
            <table width="100%" table-align="center" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td style="text-align: center;">
                        <center>
                            <div class="inner"
                                 style="width:80%; margin: 0 auto; background-color: #fff; text-align: center; padding-bottom: 25px; margin-top: -90px;">
                                <center>
                                    <div class="content"
                                         style="position: relative; width: 80%; margin: 0 auto; text-align: center; padding-top: 30px; ">
                                        <center>
                                            {% if brand.media %}
                                                <img style="margin: 0 auto; position: relative; display: block; max-width: 250px;"
                                                     src="{{ absolute_url(asset(".." ~ brand.media.getRelativePath ~ "/" ~ brand.media.getHashedFilename )) }}"
                                                     alt="{{ brand.name }}">
                                            {% else %}
                                                <p style="text-align: center; text-transform: uppercase; color: #283F5F;">{{ brand.name }}</p>
                                            {% endif %}
                                        </center>
                                        <h2 style="text-align: center; font-weight: 100; color: #283F5F;">You Have New Notifcations</h2>

                                        <p style="text-align: center; color: #717D82;">You have new sign ups for your tour</p>
                                        <hr>

                                        <h4><strong>Parent Information</strong></h4>
                                        <p style="display: inline">{{ user.firstName }}</p>
                                        <p style="display: inline">{{ user.lastName }}</p>
                                        <p style="display: inline">{{ user.Email }}</p>

                                        <h4><strong>Passenger sign ups</strong></h4>
                                        {% for passenger in newPassengers %}
                                            <p style="display: inline">{{ passenger.fName }}</p> <p style="display: inline">{{ passenger.lName }}</p> <p style="display: inline">has signed up.</p><br /><br />

                                        {% endfor %}

                                        <p>There are {{ remainingSpots }} places left to fill.</p><br /><br />

                                        <a style="text-decoration: none; display: block; width: auto; margin: 0 auto; text-align: center; color:{{ brand.primaryColor }};"
                                           href="{{ absolute_url('/tour/dashboard/' ~ tour.id ~ '/passengers') }}">Manage Passengers</a></br>

                                        <center>
                                            <a style="text-decoration: none; color:#fff; display: block; width: 40%; padding: 20px; margin: 20px auto; background-color:{{ brand.primaryColor }}; text-align: center;"
                                               href="{{ absolute_url('/tour/dashboard/' ~ tour.id ~ '/show') }}">Log in to your dashboard</a>
                                        </center>
                                        <hr>
                                        <p style="text-align: center; color: #C7C3C5;">
                                            You can also paste the link below straight into your browser window:
                                        </p></br>
                                        <a style="text-decoration: none; display: block; width: auto; margin: 0 auto; text-align: center; color:{{ brand.primaryColor }};"
                                           href="{{ absolute_url('/tour/dashboard/' ~ tour.id ~ '/show') }}">{{ absolute_url('/tour/dashboard/' ~ tour.id ~ '/show') }}</a></br>
                                    </div>
                                </center>
                            </div>
                            <footer style="background-color:#E5E8EA; padding-bottom: 25px; padding-top: 25px">
                                <div class="footer-middle" style="width: 60%; margin: 0 auto; position: relative;">
                                    <p style="text-align: center; color:#9DA6AA;">Copyright
                                        Â© {{ "now"|date("Y") }} {{ brand.name }}, All rights reserved</p>
                                </div>
                            </footer>
                        </center>
                    </td>
                </tr>
            </table>
        </div>
    {% endautoescape %}
{% endblock %}