{% extends '::base.html.twig' %}
{% block title %}Manage Layout Types{% endblock %}
{% block page_title %}Manage Layout Types{% endblock %}

{% block body -%}

    <ul class="record_actions">
        <li>
            <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" href="{{ path('manage_layouttype_new') }}">Create a new Layout Type</a>
        </li>
    </ul>

    <table class="mdl-data-table mdl-js-data-table">
        <thead>
            <tr>
                <th class="mdl-data-table__cell--non-numeric">Name (ID)</th>
                <th class="mdl-data-table__cell--non-numeric center">Icon</th>
                <th class="mdl-data-table__cell--non-numeric">Class Name</th>
                <th class="mdl-data-table__cell--non-numeric cell-actions">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td class="mdl-data-table__cell--non-numeric"><a href="{{ path('manage_layouttype_show', { 'id': entity.id }) }}">{{ entity.name }}</a> ({{ entity.id }})</td>
                <td class="mdl-data-table__cell--non-numeric center">{{ entity.icon }}</td>
                <td class="mdl-data-table__cell--non-numeric">{{ entity.className }}</td>
                <td class="mdl-data-table__cell--non-numeric cell-actions">
                    <ul class="table-actions">
                        <li>
                            <a href="{{ path('manage_layouttype_show', { 'id': entity.id }) }}" title="View"><i class="fa fam-view"></i></a>
                        </li>
                        <li>
                            <a href="{{ path('manage_layouttype_edit', { 'id': entity.id }) }}" title="Edit"><i class="fa fam-edit"></i></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
