{% extends '::base.html.twig' %}
{% block title %}Layout '{{ entity.name }}'{% endblock %}
{% block page_title %}Layout '{{ entity.name }}'{% endblock %}

{% block body -%}

    <table class="mdl-data-table mdl-js-data-table">
        <tbody>
            <tr>
                <td class="mdl-data-table__cell--non-numeric th-mimic">Name (ID)</td>
                <td class="mdl-data-table__cell--non-numeric">{{ entity.name }} ({{ entity.id }})</td>
            </tr>
            <tr>
                <td class="mdl-data-table__cell--non-numeric th-mimic">Icon</td>
                <td class="mdl-data-table__cell--non-numeric">{{ entity.icon }}</td>
            </tr>
            <tr>
                <td class="mdl-data-table__cell--non-numeric th-mimic">Class Name</td>
                <td class="mdl-data-table__cell--non-numeric">{{ entity.className }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" href="{{ path('manage_layouttype') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" href="{{ path('manage_layouttype_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
