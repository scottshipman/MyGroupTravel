{% extends '::base.html.twig' %}

{% block body -%}
    <h1>ContentBlock list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Locked</th>
                <th>Hidden</th>
                <th>Layouttype</th>
                <th>Title</th>
                <th>Body</th>
                <th>Sortorder</th>
                <th>Doublewidth</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('manage_contentblocks_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.locked }}</td>
                <td>{{ entity.hidden }}</td>
                <td>{{ entity.layoutType }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.body }}</td>
                <td>{{ entity.sortOrder }}</td>
                <td>{{ entity.doubleWidth }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('manage_contentblocks_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('manage_contentblocks_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('manage_contentblocks_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
