{% if entity.layoutType %}
    {% if entity.layoutType.name != 'image_bottom' %}
        <div class="content-block-media">
            <div class="flexslider">
                <ul class="slides">
                    {%  if entity.mediaWrapper %}
                        {% for mediaWrapper in entity.mediaWrapper %}
                            {% for media in mediaWrapper.media %}
                                <li style="list-style: none;">
                                    <img src="{{ ( media.getRelativePath ~ "/" ~ media.getHashedFilename ) | imagine_filter('slideShow') }}" title="{{ mediaWrapper.title }}" alt="{{ mediaWrapper.title }}" />
                                </li>
                            {% endfor %}
                        {% endfor %}
                    {% endif %}
                </ul>
            </div>
        </div>
    {% endif %}
{% endif %}

<div class="content-block-body">
    {{ entity.body|raw }}
</div>

