{% extends '::base.html.twig' %}
{% block title %}Currency {{ entity.name }}{% endblock %}

{% block body -%}
    <h1>Currency</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ entity.code }}</td>
            </tr>
            <tr>
                <th>Htmlsymbol</th>
                <td>{{ entity.htmlSymbol }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('manage_currency') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('manage_currency_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
