{% extends 'base.html.twig' %}

{% block title %}
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
       {#  Welcome {{ app.user.username }} #}
        My Tours
    {% else %}
        User Login
    {% endif %}
{% endblock %}
{% block page_title %}
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        My Tours {# Put menu item here #}
    {% else %}
        User Login
    {% endif %}
{% endblock %}

{% block body %}
    <div class="login-block">

        {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            {%  if 'resetting/' in app.request.pathinfo  %} <h2>Reset Password</h2>
                {% else %}
                <h2>Sign In</h2>
            {% endif %}
        {% endif %}

        <div class="login-message-block">
            {% for type, messages in app.session.flashBag.all %}
                {% for message in messages %}
                    <div class="{{ type }}">
                        {{ message|trans({}, 'FOSUserBundle') }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

        <div class="login-form">
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>

        {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <div class="login-reset">
             {%  if not ('resetting/' in app.request.pathinfo)  %}   <a href="{{ path('fos_user_resetting_request') }}">Forgot password?</a>{% endif %}
            </div>
          {% endif %}

    </div>
{% endblock %}
