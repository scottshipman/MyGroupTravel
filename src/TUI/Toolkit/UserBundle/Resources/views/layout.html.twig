{% extends 'base.html.twig' %}

{% block title %}
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
       {#  Welcome {{ app.user.username }} #}
        {% trans %}user.title.layout_auth{% endtrans %}
    {% else %}
        {% trans %}user.title.layout_anon{% endtrans %}
    {% endif %}
{% endblock %}
{% block page_title %}
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        {% trans %}user.title.layout_auth{% endtrans %} {# Put menu item here #}
    {% else %}
        {% trans %}user.title.layout_anon{% endtrans %}
    {% endif %}
{% endblock %}

{% block body %}
    <div class="login-block">

        {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            {%  if 'resetting/' in app.request.pathinfo  %} <h2>{% trans %}user.profile.login.reset{% endtrans %}</h2>
                {% else %}
                <h2>{% trans %}user.profile.login.sign_in{% endtrans %}</h2>
            {% endif %}
        {% endif %}

        <div class="login-message-block">
            {% for type, messages in app.session.flashBag.all %}
                {% for message in messages %}
                    <div class="{{ type }}">
                        {{ message|trans({}, 'FOSUserBundle') }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

        <div class="login-form">
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>

        {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <div class="login-reset">
             {%  if not ('resetting/' in app.request.pathinfo)  %}   <a href="{{ path('fos_user_resetting_request') }}">{% trans %}user.profile.login.forgot{% endtrans %}</a>{% endif %}
            </div>
          {% endif %}

    </div>
{% endblock %}
