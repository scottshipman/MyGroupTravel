{% extends '::base.html.twig' %}
{% block title %}User '{{ entity.username }}'{% endblock %}
{% block page_title %}User '{{ entity.username }}'{% endblock %}
{% if 'en_GB' in locale %} {% set format = 'd M Y' %} {% else %} {% set format = 'M d Y' %} {% endif %}
{% block body -%}

    <table class="mdl-data-table mdl-js-data-table">
        <tbody>
        <tr>
            <td class="mdl-data-table__cell--non-numeric th-mimic">ID</td>
            <td class="mdl-data-table__cell--non-numeric">{{ entity.id }}</td>
        </tr>
        <tr>
            <td class="mdl-data-table__cell--non-numeric th-mimic">Name</td>
            <td class="mdl-data-table__cell--non-numeric">{{ entity.firstName }} {{ entity.lastName }}</td>
        </tr>
        <tr>
            <td class="mdl-data-table__cell--non-numeric th-mimic">Phone Number</td>
            <td class="mdl-data-table__cell--non-numeric">{{ entity.phoneNumber }}</td>
        </tr>
        <tr>

            <td class="mdl-data-table__cell--non-numeric th-mimic">Created</td>
            <td class="mdl-data-table__cell--non-numeric">{{ entity.created | date (format)}}</td>
        </tr>
        <tr>
            <td class="mdl-data-table__cell--non-numeric th-mimic">Enabled</td>
            <td class="mdl-data-table__cell--non-numeric">{% if entity.enabled %}<i class="fa fa-check"></i>{% endif %}</td>
        </tr>
        <tr>
            <td class="mdl-data-table__cell--non-numeric th-mimic">Last Login</td>
            <td class="mdl-data-table__cell--non-numeric">{% if entity.lastLogin %}{{ entity.lastLogin | date (format)}} {% else %} Never {% endif %}</td>
        </tr>
        <tr>
            <td class="mdl-data-table__cell--non-numeric th-mimic">Avatar</td>
            <td class="mdl-data-table__cell--non-numeric center">
                <div id="user_dropzone">
                    {{ render(controller('MediaBundle:Media:createDropzoneForm', {'context':'user'})) }}

                    <div id="user_media">
                        {% if entity.media %}
                            <img src="{{ asset( entity.media.getRelativePath ~ "/" ~ entity.media.getHashedFilename ) | imagine_filter('thumbnail') }}">
                        {% endif %}
                    </div>
                </div>
            </td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" href="{{ path('user') }}">
                <i class="fa fa-arrow-circle-left"></i> Back to the list</a>
        </li>
        <li>
            <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored"
               href="{{ path('user_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil-square-o"></i> Edit
            </a></li>
        {% if delete_form %}<li>{{ form(delete_form) }}</li>{% endif %}
        {% if entity.enabled==false %}
        <li>
            <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored"
               href="{{ path('user_registration_confirmation', { 'id': entity.id }) }}"><i class="fa fa-paper-plane"></i> Send New User Notification
            </a>
        </li>
        {% endif %}
        {#   <li>{{ form(media_form) }}
        </li> #}
    </ul>

{% endblock %}
