{% extends '::base.html.twig' %}

{% block body -%}
    <h1>User list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Username (ID)</th>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Roles</th>
                <th>User Parent</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.username }}</a> ({{ entity.id }})</td>
                <td>{{ entity.honorific }} {{ entity.firstName }} {{ entity.lastName }}</td>
                <td>{{ entity.phoneNumber }}</td>
                <td><a href="mailto:{{ entity.email }}">{{ entity.email }}</a></td>
                <td>
                  <ul>
                  {% for role in entity.roles %}
                    <li>{{ role |e }}</li>
                  {% endfor %}
                  </ul>
                </td>
                <td>{{ entity.userParent }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('user_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('user_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('user_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
