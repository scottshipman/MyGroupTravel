{% extends '::base.html.twig' %}
{% block title %}Edit '{{ entity.username }}'{% endblock %}
{% block page_title %}Edit '{{ entity.username }}'{% endblock %}

{% block body -%}
    <div id="avatar-label" class="mdl-label-mimic">Profile Image
        <div style="display:none;" id="dropzone-form-close"><i class="fa fa-times-circle"></i></div>
    </div>
    {{ render(controller('MediaBundle:Media:createDropzoneForm', {'context':'user'})) }}
    {{ form_start(edit_form) }}


    <div id="user_media" class="is-dirty mdl-textfield--floating-label">
        {% if entity.media %}
            <div class="media-placeholder-image">
                <div id="overlay">
                    <i class="fa fa-pencil-square-o fa-2x"></i>
                </div>
            </div>
            <script>
                {% if entity.media %}
                $(document).ready(function () {
                    var bUrl = '{{ asset(".." ~ entity.media.getRelativePath ~ "/" ~ entity.media.getHashedFilename ) }}';
                    $(".media-placeholder-image").css({
                        "background-image": "url(" + bUrl + ")",
                        "background-position": "center",
                        "background-repeat": "no-repeat",
                        "background-size": "cover"

                    });
                });
                {% endif %}

            </script>
        {% else %}
            <span class="fa-stack fa-3x">
                        <i class="media-placeholder-image fa fa-picture-o fa-stack-5x">
                            <span style="display:block; font-size: .25em" ;>click to edit</span>
                        </i>
                    </span>


        {% endif %}
    </div>
    {{ form_widget(edit_form) }}
    {{ form_end(edit_form) }}

    <ul class="record_actions">
        <li>
            <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" href="{{ path('user') }}">Back to
                the list</a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
