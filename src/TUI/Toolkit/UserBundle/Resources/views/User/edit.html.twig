{% extends '::base.html.twig' %}
{% block title %}{% trans %}user.title.edit{% endtrans %} '{{ entity.username }}'{% endblock %}
{% block page_title %}{% trans %}user.page_title.edit{% endtrans %} '{{ entity.username }}'{% endblock %}



{% block body -%}
    <div id="avatar-label" class="mdl-label-mimic">{% trans %}user.avatar.label{% endtrans %}
        <div style="display:none;" id="dropzone-form-close"><i class="fa fa-times-circle"></i></div>
    </div>
    {{ render(controller('MediaBundle:Media:createDropzoneForm', {'context':'user'})) }}
    {{ form_start(edit_form) }}


    <div id="user_media" class="is-dirty mdl-textfield--floating-label">
        {% if entity.media %}
            <div class="media-placeholder-image edit">
                <div id="overlay">
                    <i class="fa fa-pencil-square-o fa-2x"></i>
                </div>
            </div>
            <script>
                {% if entity.media %}
                $(document).ready(function () {
                    var bUrl = '{{ asset(".." ~ entity.media.getRelativePath ~ "/" ~ entity.media.getHashedFilename ) }}';
                    $(".media-placeholder-image").css({
                        "background-image": "url(" + bUrl + ")",
                        "background-position": "50%",
                        "background-repeat": "no-repeat",
                        "background-size": "contain",
                        "width": "300px",
                        "height": "160px"
                    });
                    $("#tui_toolkit_userbundle_user_media").val('{{ entity.media.id }}');
                });
                {% endif %}

            </script>
        {% else %}
            <span class="media-placeholder-image new">
                <i class="fa fa-picture-o fa-3x"></i>
                <span>{% trans %}user.media.label{% endtrans %}</span>
            </span>
        {% endif %}
    </div>
    {% if app.user.id == entity.id %}
        <div id="security-edit-link">
            To Edit your account password or Security Question, <a href="{{ path('user_security_reset', {'id' : entity.id}) }}">click here</a>.
        </div>
    {% endif %}
    {{ form_widget(edit_form) }}

    {{ form_end(edit_form) }}

    {% if is_granted("ROLE_BRAND") %}
        <ul class="record_actions">
            <li>
                <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" href="{{ path('user') }}">
                    <i class="fa fa-arrow-circle-left"></i> {% trans %}user.actions.back{% endtrans %}</a>
            </li>
            {% if delete_form %}<li>{{ form(delete_form) }}</li>{% endif %}
        </ul>
    {% endif %}
{% endblock %}
